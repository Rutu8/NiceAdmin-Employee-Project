@model CRUDMVCproject.Models.Employees
@{
    var employees = ViewBag.employeeList as System.Data.DataTable;
}

<main id="main" class="main">
    <div class="pagetitle">
        <div class="row">
            <div class="col-8">
                <h1>Employees</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                        <li class="breadcrumb-item active">Employee</li>
                    </ol>
                </nav>
            </div>
            <div class="col-4">
                <a class="btn btn-sm btn-danger float-end" href="/admin/employees">Go Back</a>
            </div>
        </div>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <form asp-action="SaveEmployee" method="post">
                    <input asp-for="id" type="number" readonly class="form-control" />
                    <!-- Left side columns -->
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6 mt-2">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input asp-for="name" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="col-lg-6 mt-2">
                                <div class="form-group">
                                    <label>Mobile No</label>
                                    <input asp-for="mobileno" type="number" class="form-control" />
                                </div>
                            </div>
                            <div class="col-lg-6 mt-2">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="email" type="email" class="form-control" />
                                </div>
                            </div>
                            <div class="col-lg-6 mt-2">
                                <div class="form-group">
                                    <label>Gender</label><br />
                                    <label><input asp-for="gender" type="radio" name="gender" checked value="Male" />Male</label>
                                    <label><input asp-for="gender" type="radio" name="gender" value="Female" />Female</label>
                                </div>
                            </div>
                            <div class="col-lg-6 mt-2">
                                <div class="form-group">
                                    <label>Reporting To</label>
                                    <select asp-for="managerid" class="form-control">
                                        <option value="0">Select</option>
                                        @foreach(System.Data.DataRow row in employees.Rows)
                                        {
                                            <option value="@row["id"]"> @row["name"]</option>
                                        }
                                    </select>
                                   

                                  
                                </div>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a class="btn btn-danger" href="/admin/employees">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

</main><!-- End #main -->
<!-- ======= Footer ======= -->
